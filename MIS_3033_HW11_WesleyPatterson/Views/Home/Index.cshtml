<html>
<head>
    <title>Home Page</title>
    <script src="https://juxinglong.github.io/static/iframe-resizer/iframeResizer.contentWindow.min.js"></script>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Data table -->
    <link href="https://unpkg.com/gridjs/dist/theme/mermaid.min.css" rel="stylesheet" />
    <script src="https://unpkg.com/gridjs/dist/gridjs.umd.js"></script>

    <!-- Animation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.2/anime.min.js"></script>

    <!-- Map -->
    <link href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" rel="stylesheet" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <!-- sweetalert2 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.10.7/sweetalert2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.10.7/sweetalert2.all.min.js"></script>

    <link href="https://juxinglong.github.io/static/MIS3033.css" rel="stylesheet" />

    <script>
        "use strict";
        let rootPath = '@Url.Content("~/")';
        let rootpath = '@Url.Content("~/")';
    </script>

    </head>
<body>

    <div class="alert alert-primary text-uppercase" style="margin-top: 1px; width: 50vw;">Patient Information System</div>

    <div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="~/Home/Index" target="_self">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Home/Summary" target="_self">Summary</a>
            </li>
        </ul>
    </div>

    <div style="width: 50vw;" class="m-bd-callout m-bd-callout-primary" id="form">
        <span>Patient Information</span>
        <div class="input-group">
            <label class="input-group-text" >ID</label>
            <input type="text"
                   class="form-control"
                   id="pid"

                   placeholder="ID">
        </div>
        <div class="input-group">
            <label class="input-group-text"> Name </label>
            <input type="text"
                   class="form-control"
                   id="pname"

                   placeholder="Name">
        </div>
        <div class="input-group">
            <label class="input-group-text" > Age </label>
            <input type="text"
                   class="form-control"
                   id="page"

                   placeholder="Age">
        </div>
        <div class="input-group">
            <label class="input-group-text" > Weight </label>
            <input type="text"
                   class="form-control"
                   id="pweight"

                   placeholder="Weight">
        </div>
        <div class="input-group">
            <label class="input-group-text" >BMI</label>
            <input type="text"
                   class="form-control"
                   id="pbmi"

                   placeholder="BMI">
        </div>

        <div style="display: flex; flex-direction: row;">
            <div class="btn-group" style="margin-top: 5px">
                <button id="addBtn" class="btn btn-primary">Add</button>
                <button id="editBtn" class="btn btn-warning">Edit</button>
                <button id="deleteBtn" class="btn btn-danger">Delete</button>
            </div>
            <div class="badge text-bg-success" style="display: grid;  margin-top: 5px;" id="status">status</div>
        </div>
    </div>

    <div id="tbldiv">

    </div>
    <script src="~/js/home.js"></script>
</body>



</html>
